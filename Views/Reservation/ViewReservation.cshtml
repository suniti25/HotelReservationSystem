@{
}
@model IEnumerable<Reservation>

<div class="container p-3">
    <div class=" row pt-4">
        <div class=" col-6 ">
            <h2 class="text-primary">Reservation Details</h2>
        </div>
    </div>
    <br /><br />


    <table class=" table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Customer Id
                </th>
                <th>
                    Type of Room Id
                </th>
                <th>
                    Number of booked rooms
                </th>
                <th>
                    CheckInDate
                </th>
                <th>
                    CheckOutDate
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model)
            {
                <tr>
                    <td width="10%">
                        @obj.CustomerId

                    </td>
                    
                    <td width="10%">
                        @obj.RoomTypeId
                    </td>
                    <td width="10%">
                        @obj.RoomCount

                    </td>
                    <td width="30%">
                        @obj.CheckInDate.ToShortDateString()
                    </td>
                    <td width="30%">
                        @obj.CheckOutDate.ToShortDateString()
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="Reservation" asp-action="Edit" asp-route-id=@obj.Id>
                                <i class="bi bi-pencil-square"></i> Edit
                            </a>
                            <a asp-controller="Reservation" asp-action="Delete" asp-route-id=@obj.Id>
                                <i class="bi bi-pencil-square"></i> Delete
                            </a>
                           
                        </div>

                    </td>
                </tr>
            }
        </tbody>
       
    </table>
    
</div>