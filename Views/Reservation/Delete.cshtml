@{
}
@model Reservation

<h2>Delete Reservation</h2>

<p>Are you sure you want to delete this?</p>

<div>
    <h4>Reservation Details</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Room Count</dt>
        <dd class="col-sm-10">@Model.RoomCount</dd>
        <dt class="col-sm-2">CheckInDate</dt>
        <dd class="col-sm-10">@Model.CheckInDate</dd>
        <dt class="col-sm-2">CheckOutDate</dt>
        <dd class="col-sm-2">@Model.CheckOutDate</dd>
    </dl>
</div>

@using(Html.BeginForm("Delete","Reservation", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(model=>model.RoomTypeId)
    @Html.HiddenFor(model=>model.CustomerId)
    <input type="hidden" name="id" value="@Model.Id"/>
   
    <button type="submit" class="btn btn-danger">Delete</button>
}
<a asp-controller="Reservation" asp-action="ViewReservation" class="btn btn-secondary" style="width:150px">Back</a>